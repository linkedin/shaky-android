<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- LinkedIn Color theme -->
        <!-- https://brand.linkedin.com/visual-identity/color-palettes -->
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ShakyChristmasToolbarTheme" parent="@style/ShakyBaseToolbarTheme">
        <item name="android:background">@color/red</item>
    </style>

    <style name="ShakyChristmasAlertDialogTheme" parent="ShakyBaseAlertDialogTheme" >
        <item name="android:colorBackground">@color/green</item>
        <item name="android:colorAccent">@color/light_red</item>
    </style>

    <style name="ShakyChristmasImageEditorButtonTheme" parent="ShakyBaseImageEditorButtonTheme">
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="ShakyChristmasTheme">
        <item name="shakyBackgroundColor">@color/green</item>
        <item name="shakyToolbarTheme">@style/ShakyChristmasToolbarTheme</item>
        <item name="shakyImageEditorBackgroundColor">@color/green</item>
        <item name="shakyTitleColor">@android:color/white</item>
        <item name="shakyContentColor">@android:color/white</item>
        <item name="shakyImageEditorButtonTheme">@style/ShakyChristmasImageEditorButtonTheme</item>
        <item name="shakyFormEditTextAccentColor">@color/red</item>
        <item name="shakyFormEditTextTextColor">@android:color/white</item>
        <item name="shakyFormDropdownTextColor">@android:color/white</item>
        <item name="shakyFormDropdownBackgroundColor">@color/red</item>
        <item name="shakyAlertDialogTheme">@style/ShakyChristmasAlertDialogTheme</item>
    </style>

    <style name="ShakyChristmasPopupTheme" parent="">
        <item name="shakyPopupBackgroundColor">@color/green</item>
        <item name="shakyPopupButtonColor">@color/light_red</item>
        <item name="shakyPopupTitleColor">@android:color/white</item>
        <item name="shakyPopupContentColor">@android:color/white</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <!-- Common -->
        <item name="shakyBackgroundColor">@android:color/white</item>
        <item name="shakyTitleColor">@color/shaky_dark_gray</item>
        <item name="shakyContentColor">@color/shaky_gray</item>
        <item name="shakyToolbarTheme">@style/ShakyBaseToolbarTheme</item>

        <!-- Category Select -->
        <item name="shakySelectBackgroundColor">?attr/shakyBackgroundColor</item>
        <item name="shakyCategoryListItemTitleColor">?attr/shakyTitleColor</item>
        <item name="shakyCategoryListItemSubtitleColor">?attr/shakyContentColor</item>
    </style>
</resources>
